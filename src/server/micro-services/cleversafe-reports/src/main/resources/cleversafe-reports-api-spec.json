{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Cleversafe Reports",
    "license": {
      "name": "NCI",
      "url": "http://ncip.github.com/HPC/LICENSE.txt"
    }
  },
  "servers": [
    {
      "url": "https://fr-s-hpcdm-gp-d.ncifcrf.gov:{port}/{version}",
      "description": "Development",
      "variables": {
        "port": {
          "enum": [
            "7748"
          ],
          "default": "7748"
        },
        "version": {
          "enum": [
            "v1"
          ],
          "default": "v1"
        }
      }
    },
    {
      "url": "https://fr-s-hpcdm-uat-p.ncifcrf.gov:{port}/{version}",
      "description": "UAT",
      "variables": {
        "port": {
          "enum": [
            "7748"
          ],
          "default": "7748"
        },
        "version": {
          "enum": [
            "v1"
          ],
          "default": "v1"
        }
      }
    }
  ],
  "paths": {
    "/cleversafereports/vaultsummary": {
      "get": {
        "summary": "Vault Summary Report",
        "operationId": "getNewVaultSummary",
        "tags": [
          "cleversafe reports"
        ],
        "responses": {
          "200": {
            "description": "Report generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VaultSummaryResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "https://raw.githubusercontent.com/CBIIT/DME_Storage_Reports/master/src/server/common/src/main/resources/common-dto.json#/components/responses/ErrorResponse"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "NewVaultSummary": {
        "type": "object",
        "description": "Vault Summary",
        "properties": {
          "name": {
            "type": "string",
            "description": "Vault name"
          },
          "description": {
            "type": "string",
            "description": "Vault description"
          },
          "capacity": {
            "type": "number",
            "description": "Vault capacity in TB"
          },
          "used": {
            "type": "number",
            "description": "Vault capacity used in TB"
          },
          "timestamp": {
            "type": "string",
            "description": "Vault creation date",
            "example": "1995-09-07T10:40:52Z",
            "format": "date-time"
          }
        }
      },
      "VaultSummaryResponse": {
        "description": "Vault Summary Response DTO",
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/NewVaultSummary"
        }
      }
    }
  }
}